<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShakeActivity"
    android:background="#273840">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/indietro"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="100dp"
                android:clickable="true"
                android:onClick="goindietro"
                android:textStyle="bold"
                android:visibility="visible"
                android:background="@drawable/ic_arrow_back_white_24dp"/>

            <ImageView
                android:id="@+id/logoImmagine"
                android:layout_width="match_parent"
                android:layout_height="580dp"
                android:src="@drawable/shake"
                android:visibility="visible"/>

            <Button
                android:id="@+id/buttonQrcode"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:onClick="gotoacquista"
                app:backgroundTint="#ffd52a"
                app:layout_anchor="@+id/include"
                app:rippleColor="#000"
                android:text="PROCEDI ORA"
                android:textStyle="bold"
                android:background="@drawable/background_login"
                android:visibility="visible"/>




        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>