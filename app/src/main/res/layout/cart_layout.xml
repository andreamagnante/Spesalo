<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#799eab"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:background="#567681"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/cart_item_name"
                android:text="NOME"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="24sp"
                android:drawableLeft="@drawable/ic_info_black_24dp"
                android:drawablePadding="5dp"
                android:onClick="showdescription"
                />




        </LinearLayout>
        <ImageButton
            android:id="@+id/cart_item_delete"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/error"
            android:backgroundTint="#567681"
            android:text="100"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="10dp"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="€"
            android:textSize="30sp"
            android:textColor="#fff"
            android:textStyle="italic"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cart_item_price"
                android:gravity="center_vertical"
                android:text="100"
                android:textSize="25sp"
                android:textColor="#fff"
                android:textStyle="italic"
                android:layout_marginRight="2dp"
                />


        <ImageButton
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_clear_white_24dp"
            android:backgroundTint="#799eab"
            android:textStyle="italic" />

        <Button
            android:layout_width="78dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/cart_item_plusminus"
            android:background="#fff"
            android:drawableRight="@drawable/ic_expand_more_black_24dp"
            android:text="100"
            android:textSize="22sp"
            android:textColor="#800080"
            android:textStyle="bold">

        </Button>

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_drag_handle_black_24dp"
            android:backgroundTint="#799eab"
            android:textStyle="italic" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="€"
            android:textSize="30sp"
            android:textColor="#fff"
            android:textStyle="italic"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cart_item_price_final"
            android:gravity="center_vertical"
            android:text="100"
            android:textSize="25sp"
            android:textColor="#fff"
            android:textStyle="italic"
            />





    </LinearLayout>


</android.support.v7.widget.CardView>