<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#273840"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CalendarioActivity"
    tools:showIn="@layout/app_bar_calendario">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#A7DAED"
                >


                <ImageView
                    android:id="@+id/myImageView"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:src="@drawable/calendaricon2"
                    android:layout_marginBottom="70dp"/>

                <ImageButton
                    android:id="@+id/sinistracalendario"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/myImageView"
                    android:layout_alignTop="@id/myImageView"
                    android:layout_alignBottom="@id/myImageView"
                    android:paddingTop="40dp"
                    android:background="@drawable/leftside"
                    android:gravity="center"
                    android:layout_marginTop="110dp"
                    android:layout_marginBottom="70dp"
                    android:layout_marginLeft="50dp"
                    android:onClick="sinistraAnno"/>

                <TextView
                    android:id="@+id/annoCalendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/myImageView"
                    android:layout_alignTop="@id/myImageView"
                    android:layout_alignRight="@id/myImageView"
                    android:layout_alignBottom="@id/myImageView"
                    android:paddingTop="30dp"
                    android:gravity="center"
                    android:text="2019"
                    android:textStyle="bold"
                    android:textSize="45sp"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/destracalendario"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/myImageView"
                    android:layout_alignRight="@id/myImageView"
                    android:layout_alignBottom="@id/myImageView"
                    android:layout_marginTop = "110dp"
                    android:layout_marginBottom="70dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/rightside2"
                    android:gravity="center"
                    android:onClick="destraAnno"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="200dp"
                    android:gravity="center_horizontal"
                    android:text="Totale spesa annua"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/soldianno"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="235dp"
                    android:text=""
                    android:textStyle="bold"
                    android:background="@drawable/background_login"
                    android:textSize="28sp"
                    android:textColor="#d95763"
                    android:drawableLeft="@drawable/ic_euro_symbol_black_24dp"
                    android:paddingTop = "2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"/>
                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">


            </LinearLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#A7DAED"
                >


                <ImageView
                    android:id="@+id/myImageView2"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:src="@drawable/calendaricon2"
                    android:layout_marginBottom="70dp"/>

                <ImageButton
                    android:id="@+id/sinistracalendario2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/myImageView2"
                    android:layout_alignTop="@id/myImageView2"
                    android:layout_alignBottom="@id/myImageView2"
                    android:paddingTop="40dp"
                    android:background="@drawable/leftside"
                    android:gravity="center"
                    android:layout_marginTop="110dp"
                    android:layout_marginBottom="70dp"
                    android:layout_marginLeft="50dp"
                    android:onClick="sinistraMese"/>

                <TextView
                    android:id="@+id/meseCalendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/myImageView2"
                    android:layout_alignTop="@id/myImageView2"
                    android:layout_alignRight="@id/myImageView2"
                    android:layout_alignBottom="@id/myImageView2"
                    android:paddingTop="25dp"
                    android:gravity="center"
                    android:text="Giugno"
                    android:textStyle="bold"
                    android:textSize="33sp"
                    android:textColor="#000000" />

                <ImageButton
                    android:id="@+id/destracalendario2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/myImageView2"
                    android:layout_alignRight="@id/myImageView2"
                    android:layout_alignBottom="@id/myImageView2"
                    android:layout_marginTop = "110dp"
                    android:layout_marginBottom="70dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/rightside2"
                    android:gravity="center"
                    android:onClick="destraMese"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="200dp"
                    android:gravity="center_horizontal"
                    android:text="Totale spesa mensile"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/soldimese"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="235dp"
                        android:text=""
                        android:textStyle="bold"
                        android:background="@drawable/background_login"
                        android:textSize="28sp"
                        android:textColor="#d95763"
                        android:drawableLeft="@drawable/ic_euro_symbol_black_24dp"
                        android:paddingTop = "2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"/>

                    <Button android:id="@+id/compraButton"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_login"
                        android:text="Dettaglio spese"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:backgroundTint="#ffd52a"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:layout_marginRight="110dp"
                        android:layout_marginLeft="110dp"
                        android:onClick="scopri"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>



    </ScrollView>
</android.support.constraint.ConstraintLayout>